    {
        @ if (m_window != NULL)
        @ {
        @     CVolString strCaption;
        @     strCaption.SetLength(::GetWindowTextLengthW(m_window));
        @     ::GetWindowTextW(m_window, (LPWSTR)strCaption.GetText(), strCaption.GetLength());
        @     return strCaption;
